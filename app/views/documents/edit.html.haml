- @title = "Edit Document - #{@document.filename_was}"

- @theme = "default"
- content_for :header, @document.filename_was
= render "internal/tabs"
- content_for :breadcrumbs do
  %ol
    %li= link_to "docs", folders_path
    %li.breadcrumb-muted= @document.folder.category.slug
    %li= link_to @document.folder.slug, category_folder_path(@document.folder.category, @document.folder)
    %li.breadcrumb-muted= @document.filename_was
    %li.breadcrumb-muted edit
- content_for :sidebar, render("folders/sidebar")

.dashboard-container
  = render "form", document: @document
