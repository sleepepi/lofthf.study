- @title = "Edit Site - #{@site.name_was}"

- @theme = "default"
- content_for :header, @site.name_was
= render "internal/tabs"
- content_for :breadcrumbs do
  %ol
    %li= link_to "sites", sites_path
    %li= link_to @site.slug_was, @site
    %li.breadcrumb-muted edit
- content_for :sidebar, render("directory/sidebar")

.dashboard-container
  = render "form", site: @site
