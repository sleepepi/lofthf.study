- @title = "Reports"

- @theme = "default"
- content_for :header, @title
= render "internal/tabs"
- content_for :sidebar, render("reports/sidebar")

.jumbotron.jumbotron-white.jumbotron-shadow
  .float-right.text-center
    - reports_randomized_path = reports_path
    %h4.text-primary-muted{ style: "font-weight: 200;" } Randomized
    %h2= number_with_delimiter 0
  %h4.text-primary-muted{ style: "font-weight: 200;" } Scheme
  %h2
    %span> LOFT-HF O
    %sub{ style: "font-size: 60%;" } 2
    Assignment
  .progress{ style: "margin-top: 20px;margin-bottom: 0; height: 1.5rem;" }
    .progress-bar.progress-bar-striped.text-primary{ style: "background-color: #e0e0e0; width: 100%;color: #212121;" }= "0 of #{number_with_delimiter(3000)}"

.jumbotron.jumbotron-custom-text.jumbotron-shadow
  = icon("fas", "info-circle", class: "text-primary-muted")

  Randomization has not yet started.
