.key-contact
  .key-contact-icon
    - if user[:profile_picture]
      = profile_picture_tag(user, size: 64)
    - else
      .px-2= icon("fas", "user", class: "fa-3x")
  .key-contact-info
    .key-contact-name
      = user.full_name
      - if user.staffid
        .key-contact-staffid.badge.badge-light= user.staffid
      .key-contact-role= user.role
    .key-contact-email= user.email
    .key-contact-phone= user.phone
