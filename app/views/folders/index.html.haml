- @title = "Docs"

- @theme = "default"
- content_for :header, @title
= render "internal/tabs"
- content_for :breadcrumbs do
  %ol
    %li.breadcrumb-muted docs
- content_for :sidebar, render("folders/sidebar")

- @blobs = ActiveStorage::Blob.joins(:attachments).merge(ActiveStorage::Attachment.where(record_type: "Folder")).order(created_at: :desc).limit(10)

- if @blobs.present?
  .subheading Latest Uploads

  .dashboard-container.dashboard-table
    %table.table.table-striped.table-borderless.table-hover.table-sticky
      %col.d-none.d-sm-table-column{ width: "1px" }
      %col
      %col.d-none.d-lg-table-column
      %col.d-none.d-md-table-column
      %col.d-none.d-sm-table-column
      %thead
        %tr
          %th.d-none.d-sm-table-cell
          %th Name
          %th.d-none.d-lg-table-cell Folder
          %th.d-none.d-md-table-cell Size
          %th.d-none.d-sm-table-cell Uploaded
      - @blobs.each do |blob|
        - attachment = ActiveStorage::Attachment.find_by(blob: blob)
        - folder = attachment.record
        %tr
          %td.d-none.d-sm-table-cell
            = render "files/icon", file: blob
          %td
            = link_to blob.filename, blob
            .d-block.d-lg-none.small
              = folder.category.name
              = icon("fas", "caret-right")
              = link_to folder.name, category_folder_path(folder.category, folder)
          %td.d-none.d-lg-table-cell.small
            = folder.category.name
            = icon("fas", "caret-right")
            = link_to folder.name, category_folder_path(folder.category, folder)
          %td.d-none.d-md-table-cell.text-center.nowrap.small= number_to_human_size blob.byte_size
          %td.d-none.d-sm-table-cell.text-center.nowrap.small= blob.created_at.strftime("%Y-%^b-%d")

  .jumbotron.jumbotron-custom-text.jumbotron-shadow
    = icon("fas", "search")

    Use the
    = link_to "search", search_path
    to find files.
- else
  .jumbotron.jumbotron-custom-text.jumbotron-shadow
    = icon("fas", "info-circle", class: "text-primary-muted")

    No files have been uploaded.
