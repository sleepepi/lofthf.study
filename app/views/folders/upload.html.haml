- @title = "Upload Files - #{@folder.name} - #{@folder.category.name} - Docs"
- @menu_title = @folder.name

- @theme = "default"
- content_for :header do
  - if false
    .float-right
      = render "layouts/edit_delete_dropdown_header", edit_url: edit_folder_path(@folder), delete_url: @folder, delete_confirmation: "Delete #{@folder.name}?"
  = @menu_title
= render "internal/tabs"
- content_for :breadcrumbs do
  %ol
    %li= link_to "docs", folders_path
    %li.breadcrumb-muted= @folder.category.slug
    %li= link_to @folder.slug_was, category_folder_path(@category, @folder)
    %li.breadcrumb-muted upload files
- content_for :sidebar, render("folders/sidebar")

.dashboard-container
  = render "files/form", folder: @folder
