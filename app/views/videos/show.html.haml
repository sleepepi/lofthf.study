- @title = "#{@video.name} - Videos"
- @menu_title = @video.name

- content_for :header, "Videos"
= render "internal/tabs"
- content_for :breadcrumbs do
  %ol
    %li= link_to "videos", videos_path
    %li.breadcrumb-muted= @video.name.downcase
- content_for :sidebar, render("videos/sidebar")

.d-flex.align-items-center.embed-responsive.embed-responsive-16by9.mb-3{ style: "max-width: 1400px;" }
  %iframe.embed-responsive-item{ src: @video.embed_url, webkitallowfullscreen: true, mozallowfullscreen: true, allowfullscreen: true }

.jumbotron.jumbotron-custom-text.jumbotron-muted{ style: "max-width: 1400px;" }
  = @video.name
